@model IEnumerable<test1.Models.Owner>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>飼主資料</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* 表格標題樣式 */
        table.table-bordered thead th {
            text-align: center; /* 水平居中 */
            background-color: #5B5B5B; /* 深灰色背景 */
            color: white; /* 白色文字 */
            padding: 10px; /* 增加內邊距 */
        }

        /* 表格內容樣式 */
        table tbody td {
            text-align: center; /* 水平居中 */
            vertical-align: middle; /* 垂直居中 */
            padding: 10px; /* 增加內邊距 */
        }

        /* 搜尋與新增按鈕樣式 */
        .search-container {
            display: flex;
            align-items: center; /* 垂直居中 */
            gap: 10px; /* 控制間距 */
        }

            .search-container input {
                height: 40px; /* 輸入框高度 */
                font-size: 16px; /* 字體大小 */
                padding: 0 10px; /* 左右內邊距 */
                border: 1px solid #5B5B5B; /* 灰色邊框 */
                border-radius: 5px; /* 圓角 */
            }

            .search-container button {
                height: 40px; /* 按鈕高度 */
                font-size: 16px; /* 字體大小 */
                width: 100px; /* 固定寬度 */
                background-color: #019858; /* 綠色背景 */
                color: white; /* 白色文字 */
                border: none; /* 移除邊框 */
                border-radius: 5px; /* 圓角 */
                cursor: pointer; /* 鼠標樣式 */
            }

                .search-container button:hover {
                    background-color: #218838; /* 懸停時綠色加深 */
                    color: white; /* 保持文字為白色 */
                }

        /* 通用綠色按鈕樣式 */
        .btn-custom-green {
            background-color: #019858; /* 綠色背景 */
            color: white; /* 白色文字 */
            border: none; /* 移除邊框 */
            height: 40px; /* 按鈕高度 */
            font-size: 18px; /* 字體大小 */
            padding: 0 15px; /* 左右內邊距 */
            border-radius: 5px; /* 圓角 */
            display: flex; /* 使用 Flex 排版 */
            align-items: center; /* 垂直居中 */
            justify-content: center; /* 水平居中 */
            text-decoration: none; /* 去除下劃線 */
            cursor: pointer; /* 滑鼠移過時顯示指標 */
        }

            /* 懸停樣式 */
            .btn-custom-green:hover {
                background-color: #218838; /* 懸停時綠色加深 */
                color: white; /* 保持文字為白色 */
            }


    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4 text-center">飼主資料</h1>

        <!-- 搜尋與新增 -->
        <div class="d-flex justify-content-between mb-3">
            <form class="search-container" method="get" action="/Owner">
                <input class="form-control"
                       type="search"
                       name="phoneNumber"
                       placeholder="搜尋飼主電話"
                       aria-label="Search" />
                <button type="submit" class="btn btn-custom-green">搜尋</button>
            </form>
            <a href="/Owner/Create" class="btn btn-success ms-2">新增飼主</a>
        </div>

        <!-- 表格 -->
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>電話</th>
                    <th>Email</th>
                    <th>地址</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var owner in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Index" asp-controller="Pet" asp-route-ownerId="@owner.OwnerID">@owner.Name</a>
                        </td>
                        <td>@owner.PhoneNumber</td>
                        <td>@owner.Email</td>
                        <td>@owner.Address</td>
                        <td>
                            <a href="/Owner/Edit/@owner.OwnerID" class="btn btn-success btn-sm">編輯</a>
                            <a href="/Owner/DeleteConfirm/@owner.OwnerID" class="btn btn-danger btn-sm">刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


