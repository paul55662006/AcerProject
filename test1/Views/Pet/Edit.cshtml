@model test1.Models.Pet

<h2>編輯寵物</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PetID" />
    <input type="hidden" asp-for="OwnerID" />

    <div class="form-group">
        <label for="ImageFile">上傳圖片</label>
        <input type="file" class="form-control" id="ImageFile" name="imageFile" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="form-group">
            <label>Current Image</label>
            <img src="@Model.ImagePath" alt="Pet Image" class="img-thumbnail" style="max-height: 200px;" />
        </div>
    }
    <div class="form-group">
        <label for="PetName">寵物姓名</label>
        <input asp-for="PetName" class="form-control" />
        <span asp-validation-for="PetName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TypeName">寵物種類</label>
        @Html.DropDownListFor(model => model.TypeName, (IEnumerable<SelectListItem>)ViewBag.TypeNameOptions, "Select Type", new { @class = "form-control" })
        <span asp-validation-for="TypeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BirthDate">寵物生日</label>
        <input asp-for="BirthDate" class="form-control" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Gender">寵物性別</label>
        @Html.DropDownListFor(model => model.Gender, (IEnumerable<SelectListItem>)ViewBag.GenderOptions, "Select Gender", new { @class = "form-control" })
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Neutering">是否結紮</label>
        @Html.DropDownListFor(model => model.Neutering, (IEnumerable<SelectListItem>)ViewBag.NeuteringOptions, "Select Neutering", new { @class = "form-control" })
        <span asp-validation-for="Neutering" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MicrochipID">晶片號碼</label>
        <input asp-for="MicrochipID" class="form-control" />
        <span asp-validation-for="MicrochipID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="State">狀態</label>
        @Html.DropDownListFor(model => model.State, (IEnumerable<SelectListItem>)ViewBag.StateOptions, "Select State", new { @class = "form-control" })
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">儲存</button>
        <a asp-controller="Pet" asp-action="Index" asp-route-ownerId="@Model.OwnerID" class="btn btn-secondary">取消</a>
    </div>
</form>
